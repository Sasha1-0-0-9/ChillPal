        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card h-100">
            <div class="card-footer">
              <h5 class="card-title"><%= link_to category.title, category_path(category) %> </h5>
            </div>
          </div>
        </div>
              <% end %>
            </nav>
        </div>
      </main>